<div class="flex justify-between px-4 md:mt-12 md:pt-12">
  <div class="md:mt-2 md:pt-0">
  <%= link_to 'Sara Thayer'.upcase, root_path, class: "pl-6 text-title text-2xl text-black my-10 hover:text-gray-700 align-middle pt-4 md:hidden" %>
  </div>
  
  <div data-controller="dropdown" class="pt-2">
    <%= link_to "#", data: { action: "click->dropdown#toggle click@window->dropdown#hide" }, class: "md:hidden hover:text-gray-700" do %>
      <%= render_svg 'icons/grid', styles: "icon-md fill-current" %>
    <% end %>

    <div data-target="dropdown.menu" class="absolute left-0 dropdown text-sidebar-nav" aria-expanded="false">

      <div class="grid grid-cols-1 mt-4 pt-4 pl-4 pr-12 pb-6 bg-white rounded shadow-lg">
        <%= link_to t('about_link').upcase, about_path, class: "block flex justify-start text-l text-black pr-4 mt-4 hover:text-gray-700" %>

            <div class="vertical-line-projects">
              <div class="py-0 my-0 pl-4">
                <ul class="list-none"><%= link_to t('arc_design_link'), arc_design_path, class: "flex justify-start text-paragraph-body tracking-wide text-xs font-light text-gray-500 hover:text-gray-700" %>

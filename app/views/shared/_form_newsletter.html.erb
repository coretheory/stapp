<%= form_for @audience do |form| %>
    <% if @audience.errors.any? %>
      <div id="error_explanation" class="border-red-400 p-4 rounded border bg-red-100 mb-6">
        <h2 class="text-sm heading text-red-500"><%= pluralize(@audience.errors.count, "error") %> prohibited this audience from being saved:</h2>

        <ul class="text-sm mt-2 text-red-500 pl-4 list-disc">
        <% @audience.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>

    <% end %>

    <div class="flex items-center border-b border-gray-700 pb-2 pt-6">
      <%= form.email_field :email, class: "appearance-none bg-transparent border-none w-full text-gray-700 mr-3 py-1 px-2 leading-tight focus:outline-none" %>
      <%= form.submit 'Sign up', class: "flex-shrink-0 btn btn-black btn-small" %>
    </div>
<% end %>
<% provide(:title, "Gallery") %>

<div class="py-2 px-2 lg:px-2 lg:mt-8 md:pt-12 md:pt-6 container">
  <div class="w-full pr-0 md:pr-6 md:mt-8 md:pt-8 mb-6">
    <div class="bg-white">
      <% if @projects.exists? %>
        <div class="grid grid-cols-1 md:pt-12 md:mt-12 md:grid-cols-2 md:gap-1">
          <% @projects.each do |project| %>
            <% if project.header_image.attached? %>
              <%= image_tag project.header_image %>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="block justify-center p-10 text-center">
          <div class="flex justify-center pb-4">
            <%= render_svg 'icons/emoji-expressionless' %>
          </div>
          <p class="mb-4">Wow such empty... </p>
          <% if user_signed_in? && current_user.username == 'sara' %>
              <%= link_to 'Create a new project', new_project_path, class: "flex block justify-center btn btn-purple btn-small" %>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
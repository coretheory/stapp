<div class="border-b border-r border-l">
  <div class="px-2 pt-2 pb-2 flex items-center flex-wrap">

    <%#= image_tag post.post_image.thumb.url, width: 80, height: 80 if post.post_image.present? %>
    <%= image_tag post.header_image.variant(resize_to_limit: [200, 200]) %>

    <%#= video_tag post.post_video if post.post_video.present? %>

    <div class="pl-4">
      <h2 class="mb-1 flex flex-wrap items-center text-xl"><%= link_to post.title, post, class:"no-underline" %> <span class="pl-2 text-xs font-normal font-mono text-blue-400 tracking-tighter"><%= link_to truncate(post.url, length: 18), post.url, class:"no-underline"  if post.url.present? %></span></h3>

      <div class="text-sm text-gray-700"><%= post.body %></div>
      <% if user_signed_in? && current_user.id == post.user_id  %>
        <div class="pt-2 flex flex-wrap items-center">
          <%= link_to edit_post_path(post), class:"no-underline mr-2" do %>
            <%= render_svg 'icons/pencil-square', title: "Edit", styles: "fill-current text-gray-500 icon-sm" %>
          <% end %>

          <%= link_to post, method: :delete, class:"no-underline", data: { confirm: 'Are you sure?' } do %>
            <%= render_svg 'icons/trash', title: "Delete", styles: "fill-current text-gray-500 icon-sm" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

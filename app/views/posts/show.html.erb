<% content_for :primary_content do %>
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Title:</strong>
	  <%= @post.title %>
	</p>

	<p>
	  <strong>Body:</strong>
	  <%= @post.body %>
	</p>

	<p>
	  <strong>Url:</strong>
	  <%= @post.url %>
	</p>
<% end %>

<% content_for :secondary_content do %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
<% end %>

<%= render "basic_layout" %>
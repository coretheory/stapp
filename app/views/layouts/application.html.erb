<!DOCTYPE html>
<html>
  <head>
    <%= render "shared/head" %>
    <%= render "shared/shim" %>
  </head>

  <body class="bg-gray-300">
    <%= render "shared/notices" %>   
    <div class="min-h-screen md:flex">
      <div class="flex-none w-full md:max-w-xs bg-white text-black">
        <%= render "shared/navbar" %>
      </div>
    
      <div class="flex-1 bg-white pb-12 px-4">
        <%= content_for?(:content) ? yield(:content) : yield %>
      </div>
      
    </div>

    <div class="relative w-full bg-gray-300 md:my-12 md:py-12">
      <%= render "shared/footer" %>
    </div>
  </body>
</html>

<% provide(:title, "Gallery") %>

<div class="py-2 px-2 lg:px-2 lg:mt-8 md:pt-12 md:pt-6 container">
  <div class="w-full pr-0 md:pr-6 mb-6 mt-10 pt-10">
    <div class="bg-white">

      <% if @galleries.exists? %>
        <div class="gallery-container">
          <% @galleries.shuffle.each do |gallery| %>
            <div class="gallery-item shadow-lg rounded">
              <%= link_to image_tag(gallery.gallery_image), gallery %>
            </div>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>
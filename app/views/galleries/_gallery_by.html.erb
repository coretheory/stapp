<% if user_signed_in? && current_user.id == @gallery.user_id  %>
  <p class="text-gray-700 font-normal text-sm text-center">gallery by <%= link_to "#{gallery.user.username}", profile_path(gallery.user), class:"no-underline text-gray-700 font-normal hover:text-gray-700 hover:underline" %> <%= time_ago_in_words(gallery.created_at) %> ago
    <div class="pt-2 flex justify-center text-center m-auto pb-4">
      <%= link_to edit_gallery_path(@gallery), class:"no-underline mr-2" do %>
        <%= render_svg 'icons/pencil-square', title: "Edit", styles: "fill-current text-gray-500 icon-sm" %>
      <% end %>

      <%= link_to @gallery, method: :delete, class: "no-underline", data: { confirm: 'Are you sure?' } do %>
        <%= render_svg 'icons/trash', title: "Delete", styles: "fill-current text-gray-500 icon-sm" %>
      <% end %>
    </div>
  </p>
<% end %>